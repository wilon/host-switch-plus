{
  "manifest_version": 2,
  "name": "Snail Hosts",
  "description": "A fast hosts switch tool for developer.",
  "minimum_chrome_version": "23",
  "version": "0.1.1",
  "icons": {
    "16"  : "icons/snail_26.png",
    "128" : "icons/snail_26.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "pages/option.html",
  "content_scripts": [{
    "exclude_globs": [  ],
    "include_globs": [ "*" ],
    "js": [ "/js/script.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "run_at": "document_start",
    "all_frames": false
  }],
  "browser_action": {
    "default_icon": "icons/snail_26.png",
    "default_title": "Snail Hosts",
    "default_popup": "pages/popup.html"
  },
  "permissions": [
    "proxy",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ]
}
